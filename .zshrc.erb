# FZF
export FZF_DEFAULT_COMMAND="rg --files --hidden --no-ignore"
ffd() {
  old_dir=$(pwd)
  cd ~
  new_dir=$(find * -maxdepth 2 -type d | fzf)
  if [ -z "$new_dir" ]
  then
    cd $old_dir
  else
    cd $new_dir
  fi
}

fff() {
  file=$(rg --files --hidden | fzf)
  if [ -z "$file" ]
  then
  else
    vim $file
  fi
}

ffc() {
  file=$(rg --hidden . | fzf)
  if [ -z "$file" ]
  then
 else
    vim $(echo $file | sed 's/:.*//g')
  fi
}

<% if v[:local] %>
# yazi file manager
function y() {
    local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
   yazi "$@" --cwd-file="$tmp"
    if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
      builtin cd -- "$cwd"
    fi
    rm -f -- "$tmp"
}
<% end %>

